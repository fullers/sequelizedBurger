<div class="container text-center">
	<div class="row">
		<div class="col-md-12">
			<img src="/assets/img/burger.png">
			<h2>Eat-Da-Burger Da-Sequel!</h2>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">
			<ul>
				{{#each burgers}}
				  {{#unless this.devoured}}
					<li>
						<div class="row">
						<div class="col-md-6">
						<div class="well well-sm">{{this.id}}. {{this.burger_name}}</div>
						</div>
						<form class="form-group" action="burgers/updateOne/{{this.id}}?_method=PUT" method="POST">
							<div class="col-md-6">
					  			<input class="form-control" type="hidden" name="devoured" value="true">
					  			<input class="form-control" id="customer" name="customer" placeholder="Customer?">
					       		<button class="btn btn-default btn-sm" type="submit">Devour it!</button>
				       		</div>
						</form>		
						</div>
					 </li>
				    {{/unless}}
				 {{/each}}
			</ul>
		</div><!-- End of Col 1 -->
		<div class="col-md-6">
			<ul>
				  {{#each burgers}}
				    {{#if this.devoured}}
				      <li>
				      	<div class="row">
				      	<div class="col-md-6">
				        <div class="well well-sm text-left">{{this.id}}. {{this.burger_name}} (Eaten by {{this.customer.customer}} )</div>
					        <form class="form-group" action="burgers/updateOne/{{this.id}}?_method=PUT" method="POST">
					          <input class="form-control" type="hidden" name="devoured" value="false">
					        </form>
				        </div>
				        </div>
				      </li>
				    {{/if}}
				  {{/each}}
				</ul>
		</div><!-- End of Col 2 -->
	</div> <!-- End of Row -->
	<form class="create-update-form" action="/burgers/insertOne" method="POST">
	  <div class="form-group">
	    <label for="burger"></label>
	    <textarea class="form-control" rows="4" cols="50" id="burger" name="burger_name" required="required"></textarea> 
	  </div>

	  <button class="btn btn-primary" type="submit">Submit</button>
	  <p>Enter a burger you want to eat then click the "Submit" button.</p>
	</form>
</div> <!-- End of Container -->